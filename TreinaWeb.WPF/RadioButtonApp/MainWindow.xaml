<Window x:Class="RadioButtonApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadioButtonApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Margin="10">
        <TextBlock Text="Qual o seu sexo?"/>
        <RadioButton GroupName="sexo"
                     Content="Masculino"
                     IsChecked="True"/>
        <RadioButton GroupName="sexo"
                     Content="Feminino"/>

        <TextBlock Margin="0,20" Text="Qual a sua faixa salarial?"/>
        <RadioButton GroupName="salario"
                     Content="Até R$ 1.000,00"
                     IsChecked="True"/>
        <RadioButton GroupName="salario"
                     Content="De R$ 1.000,01 a R$ 2.000,00"/>
        <RadioButton GroupName="salario"
                     Content="Mais de R$ 2.000,01"/>
    </StackPanel>
</Window>
