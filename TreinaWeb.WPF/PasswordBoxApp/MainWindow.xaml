<Window x:Class="PasswordBoxApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordBoxApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Margin="10">
        <TextBlock Text="Usuário"/>
        <TextBox x:Name="txtUsuario"/>
        <TextBlock Text="Senha"/>
        <PasswordBox x:Name="pwbSenha"/>
        <Button Width="100" Content="Validar" Click="Button_Click"/>
        <TextBlock x:Name="tblResultado"/>
    </StackPanel>
</Window>
