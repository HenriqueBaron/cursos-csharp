<Window x:Class="CheckBoxApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckBoxApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Margin="10">
        <CheckBox x:Name="chkAceitaTermos" Content="Li e aceito os termos e condições" />
        <Button Width="80" Content="Enviar" Margin="10" HorizontalAlignment="Left"
                Click="Button_Click" />
        <TextBlock x:Name="tblResultado" />
    </StackPanel>
</Window>
